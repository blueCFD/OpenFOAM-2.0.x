#!/bin/sh
cd ${0%/*} || exit 1    # run from this directory
. $WM_PROJECT_DIR/wmake/scripts/AllwmakeArguments

[ -d "$WM_PROJECT_DIR" ] || {
    echo "Error: WM_PROJECT_DIR directory does not exist"
    echo "    Check the OpenFOAM entries in your dot-files and source them."
    echo "    WM_PROJECT_DIR=$WM_PROJECT_DIR"
    exit 1
}

set -x

rm -rf latex man qt_qch

# remove html directory in background
if [ -d "html" ]; then
  mv html html-stagedRemove$$ 2> /dev/null
  rm -rf html-stagedRemove$$ >/dev/null 2>&1 &
fi

# ensure that created files are readable by everyone
umask 22
doxygen

# fix permissions (NB: '+X' and not '+x'!)
chmod -R a+rX html latex man 2>/dev/null

echo
echo "Done doxygen"
echo

cp openfoam-code.qhcp qt_qch/
cd qt_qch
qcollectiongenerator openfoam-code.qhcp -o openfoam-code.qhc
cd ..

echo
echo "Done Qt collection generation."
echo

# ----------------------------------------------------------------- end-of-file
